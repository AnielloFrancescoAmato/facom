@using ArticoliGratis.Models;

@model Provincia;
@{
    ViewData["Title"] = "Amministrazione";
}

<div class="row">
    <div class="col-md-12">
        <div id="categorieArticoli">
        <h3>Eliminazione @Model.NomeProvincia</h3>
    </div>
 </div> 

<form asp-controller="Administration" asp-action="Provincia_ConfirmDelete" method="post">
    <input type="hidden" asp-for="idProvincia" />
    <div class="form-group col-md-12">
        <label asp-for="NomeProvincia" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="NomeProvincia" class="form-control" readonly/>
            <span asp-validation-for="NomeProvincia" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="DescrizioneProvincia" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="DescrizioneProvincia" class="form-control" readonly />
            <span asp-validation-for="DescrizioneProvincia" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-8">
            <button type="submit">Conferma</button>
            <input type="button" value="Indietro" onclick="location.href='@Url.Action("Provincia", "Administration")'" />
        </div>
    </div>
</form>

