@model IEnumerable<ArticoliGratis.Models.CategoriaAzienda>;
@{
    ViewData["Title"] = "Amministrazione";
}
<div class="row">
    <div class="col-md-12">
        <div id="categorieArticoli">
        <h3>Gestione Categorie Aziende</h3> 
        <ul class="list-unstyled">    
            <li>@Html.ActionLink("Crea Categoria Azienda", "CategoriaAzienda_Create" , "Administration" )</li>
        </ul>
    </div>
 </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescrizioneCategoria)
            </th>    
            <th>             
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescrizioneCategoria)
                </td>         
                <td>              
                    @Html.ActionLink("Modifica", "CategoriaAzienda_Edit" , "Administration",  new {id=@item.idCategoriaAzienda} )
                    @Html.ActionLink("Elimina", "CategoriaAzienda_Delete" , "Administration",  new {id=@item.idCategoriaAzienda} )
                </td>
                </tr>
        }
    </tbody>
</table>






