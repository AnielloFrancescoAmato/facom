@using ArticoliGratis.Models;

@model Comune;
@{
    ViewData["Title"] = "Amministrazione";
}

<div class="row">
    <div class="col-md-12">
        <div id="categorieArticoli">
        <h3>Eliminazione @Model.NomeComune</h3>
    </div>
 </div> 

<form asp-controller="Administration" asp-action="Comune_ConfirmDelete" method="post">
    <input type="hidden" asp-for="idComune" />
    <div class="form-group col-md-12">
        <label asp-for="NomeComune" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="NomeComune" class="form-control" readonly/>
            <span asp-validation-for="NomeComune" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="DescrizioneComune" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="DescrizioneComune" class="form-control" readonly />
            <span asp-validation-for="DescrizioneComune" class="text-danger"></span>
        </div>
    </div>
 <div class="form-group col-md-12">
        <label asp-for="Provincia" class="control-label col-md-4"></label>
        <div class="col-md-4">
              <select  asp-for="Provincia.idProvincia"   
                      class="form-control"   
                      asp-items="@(new SelectList(@ViewBag.province,"idProvincia", "NomeProvincia"))">  
               </select> 
        </div>
    </div>

    <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-8">
            <button type="submit">Conferma</button>
            <input type="button" value="Indietro" onclick="location.href='@Url.Action("Comune", "Administration")'" />
        </div>
    </div>
</form>

