@model ArticoliGratis.Models.TitoloDiStudio;

@{
    ViewData["Title"] = "Amministrazione";
}

<div class="row">
    <div class="col-md-12">
        <div id="categorieArticoli">
        <h3>Eliminazione @Model.NomeTitolodiStudio</h3>
    </div>
 </div> 

<form asp-controller="Administration" asp-action="TitoliDiStudio_ConfirmDelete" method="post">
    <input type="hidden" asp-for="idTitoloDiStudio" />
    <div class="form-group col-md-12">
        <label asp-for="NomeTitolodiStudio" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="NomeTitolodiStudio" class="form-control" readonly/>
            <span asp-validation-for="NomeTitolodiStudio" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="DescrizioneTitolodiStudio" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="DescrizioneTitolodiStudio" class="form-control" readonly />
            <span asp-validation-for="DescrizioneTitolodiStudio" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-8">
            <button type="submit">Conferma</button>
            <input type="button" value="Indietro" onclick="location.href='@Url.Action("LavoriUtenti", "Administration")'" />
        </div>
    </div>
</form>

