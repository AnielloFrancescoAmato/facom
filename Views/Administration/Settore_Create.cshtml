@model ArticoliGratis.Models.Settore;
@{
    ViewData["Title"] = "Amministrazione";
}


<div class="row">
    <div class="col-md-12">
        <div id="categorieArticoli">
        <h3>Creazione Settore Utente</h3>
    </div>
 </div> 
 
 <form asp-controller="Administration" asp-action="Settore_Create" method="post">
    <div class="form-group col-md-12">
        <label asp-for="NomeSettore" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="NomeSettore" class="form-control" />
            <span asp-validation-for="NomeSettore" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="DescrizioneSettore" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="DescrizioneSettore" class="form-control" />
            <span asp-validation-for="DescrizioneSettore" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-8">
            <button type="submit">Inserisci</button>
            <input type="button" value="Indietro" onclick="location.href='@Url.Action("Settore", "Administration")'" />
        </div>
    </div>
</form>



