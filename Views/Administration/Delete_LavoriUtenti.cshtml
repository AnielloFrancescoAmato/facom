@model ArticoliGratis.Models.Lavoro;
@{
    ViewData["Title"] = "Amministrazione";
}



<form asp-controller="Administration" asp-action="ConfirmDelete_LavoriUtenti" method="post">
    <input type="hidden" asp-for="idLavoro" />
    Nome Lavoro:  <input asp-for="NomeLavoro" readonly > <br />
    <span asp-validation-for="NomeLavoro" class="text-danger"></span>
    Descrizione Lavoro: <input asp-for="DescrizioneLavoro" readonly/><br/>
    <span asp-validation-for="DescrizioneLavoro" class="text-danger"></span>
    <button type="submit">Conferma cancellazione</button>
</form>



