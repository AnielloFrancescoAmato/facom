@using ArticoliGratis.Models;

@model Regione;
@{
    ViewData["Title"] = "Amministrazione";
}

<div class="row">
    <div class="col-md-12">
        <div id="categorieArticoli">
        <h3>Eliminazione @Model.NomeRegione</h3>
    </div>
 </div> 

<form asp-controller="Administration" asp-action="Regione_ConfirmDelete" method="post">
    <input type="hidden" asp-for="idRegione" />
    <div class="form-group col-md-12">
        <label asp-for="NomeRegione" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="NomeRegione" class="form-control" readonly/>
            <span asp-validation-for="NomeRegione" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="DescrizioneRegione" class="control-label col-md-4"></label>
        <div class="col-md-4">
            <input asp-for="DescrizioneRegione" class="form-control" readonly />
            <span asp-validation-for="DescrizioneRegione" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-8">
            <button type="submit">Conferma</button>
            <input type="button" value="Indietro" onclick="location.href='@Url.Action("Regione", "Administration")'" />
        </div>
    </div>
</form>

